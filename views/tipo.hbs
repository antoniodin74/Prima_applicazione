<h1>Lista Tipi</h1>
{{#if message}}
    {{#each message}}
        <div class="alert alert-success">{{this}}</div>
    {{/each}}
{{/if}}
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{this}}</div>
    {{/each}}
{{/if}}
{{> newtipo}}

<ul class="list-group">
    {{#each tipi}}
        <li class="list-group-item d-flex justify-content-between align-items-center row">
            <div class="col-md-10">
                <a href="/tipo/{{this.id}}/principale">
                {{this.tipo}}
                </a>
                <span class="badge badge-danger badge-pill">{{this.count1}}</span>
            </div>
            <div class="col-md-2">
            <a href="/tipo/{{this.id}}/edit" class="btn btn-success" title="UPDATE">
              <i class="fa fa-pen-alt"></i>
            </a>
            <form method="post" action="/tipo/{{this.id}}" name="form{{this.id}}" style="display: inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="button" onclick="return showConfirmMsg('Delete Tipo', 'Sei sicuro di eliminare il tipo?', 'form{{this.id}}')" class="btn btn-danger" title="DELETE">
                    <i class="fa fa-trash-o"></i>
                </button>
            </form>
            </div>
        </li>
    {{/each}}
</ul>